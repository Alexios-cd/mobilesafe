<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:itheima="http://schemas.android.com/apk/res/com.fwj.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#8866ff00"
            android:gravity="center"
            android:text="设置中心"
            android:textSize="20sp" />

        <com.fwj.mobilesafe.view.SettingView
            android:id="@+id/sv_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            itheima:des_off="自动更新关闭"
            itheima:des_on="自动更新开启"
            itheima:title="自动更新" >
        </com.fwj.mobilesafe.view.SettingView>

        <com.fwj.mobilesafe.view.SettingView
            android:id="@+id/sv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            itheima:des_off="号码归属地隐藏"
            itheima:des_on="号码归属地显示"
            itheima:title="号码归属地" >
        </com.fwj.mobilesafe.view.SettingView>

        <com.fwj.mobilesafe.view.SettingClickView
            android:id="@+id/scv_location_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.fwj.mobilesafe.view.SettingClickView>

        <com.fwj.mobilesafe.view.SettingClickView
            android:id="@+id/scv_location_postion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.fwj.mobilesafe.view.SettingClickView>

        <com.fwj.mobilesafe.view.SettingView
            android:id="@+id/sv_blacknum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            itheima:des_off="黑名单拦截关闭"
            itheima:des_on="黑名单拦截开启"
            itheima:title="黑名单拦截" >
        </com.fwj.mobilesafe.view.SettingView>
           <com.fwj.mobilesafe.view.SettingView
            android:id="@+id/sv_watchdog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            itheima:des_off="软件锁关闭"
            itheima:des_on="软件锁开启"
            itheima:title="软件锁" >
        </com.fwj.mobilesafe.view.SettingView>
    </LinearLayout>

</ScrollView>